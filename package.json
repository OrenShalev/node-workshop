{
  "name": "node-workshop",
  "version": "1.0.0",
  "description": "All code for the Wix NodeJS workshop",
  "main": "index.js",
  "scripts": {
    "node": "babel-node",
    "postinstall": "npm run install-01 && npm run install-02",
    "install-01": "cd solved-exercises/01-db && npm install",
    "install-02": "cd solved-exercises/02-todomvc-client && npm install",
    "install-03": "cd solved-exercises/03-todomvc-server && npm install",
    "testing": "mocha --require babel-register --require babel-polyfill",
    "test": "mocha test/**/*-spec.js --require babel-register --require babel-polyfill",
    "posttest": "npm run test-01 && npm run test-02 && npm run test-03",
    "test-01": "cd solved-exercises/01-db && npm test",
    "test-02": "cd solved-exercises/02-todomvc-client && npm test",
    "test-03": "cd solved-exercises/03-todomvc-server && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/node-workshop.git"
  },
  "keywords": [
    "workshop",
    "tutorial",
    "excercise",
    "nodejs",
    "javascript"
  ],
  "author": "Gil Tayar <gil@tayar.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wix/node-workshop/issues"
  },
  "homepage": "https://github.com/wix/node-workshop#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "bluebird": "^3.3.4",
    "chai": "^3.5.0",
    "lodash": "^4.6.1",
    "mocha": "^2.4.5",
    "node-fetch": "^1.4.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.7.2",
    "body-parser": "^1.15.0",
    "ejs": "^2.4.1",
    "express": "^4.13.4",
    "form-data": "^1.0.0-rc4"
  }
}
